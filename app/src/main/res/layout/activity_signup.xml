<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".auth.signup">

   <TextView
       android:id="@+id/signup_sign"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Sign up"
       android:textColor="#ffffff"
       android:textSize="30dp"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="30dp"
       />

   <TextView
       android:id="@+id/signup_userid"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Username"
       android:textSize="11dp"
       android:layout_below="@+id/signup_sign"
       android:textColor="#ffffff"
       android:layout_marginRight="42dp"
       android:layout_marginLeft="42dp"
       android:layout_marginTop="24dp"
       />
x
   <EditText
       android:id="@+id/signup_idusertext"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/signup_userid"
       android:layout_marginTop="11dp"
       android:layout_marginLeft="40dp"
       android:layout_marginRight="40dp"
       android:background="@drawable/edit_text_corner_radius"
       android:elevation="4dp"
       android:padding="13dp" />

   <TextView
       android:id="@+id/signup_password"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="password"
       android:textSize="11dp"
       android:layout_below="@+id/signup_idusertext"
       android:textColor="#ffffff"
       android:layout_marginLeft="40dp"
       android:layout_marginRight="40dp"
       android:layout_marginTop="24dp"
       />

   <EditText
       android:id="@+id/signup_idpassword"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/signup_password"
       android:inputType="textPassword"
       android:layout_marginLeft="40dp"
       android:layout_marginRight="40dp"
       android:layout_marginTop="11dp"
       android:background="@drawable/edit_text_corner_radius"
       android:padding="13dp"
       android:elevation="4dp"
       />

   <TextView
       android:id="@+id/signup_emailtext"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Email"
       android:textSize="11dp"
       android:layout_below="@+id/signup_idpassword"
       android:textColor="#ffffff"
       android:layout_marginLeft="40dp"
       android:layout_marginRight="40dp"
       android:layout_marginTop="24dp"
       />

   <EditText
       android:id="@+id/signup_idemail"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/signup_emailtext"
       android:layout_marginLeft="40dp"
       android:layout_marginRight="40dp"
       android:layout_marginTop="11dp"
       android:background="@drawable/edit_text_corner_radius"
       android:padding="13dp"
       android:elevation="4dp"
       />

   <TextView
       android:id="@+id/signup_phone"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Phone"
       android:textSize="11dp"
       android:layout_below="@+id/signup_idemail"
       android:textColor="#ffffff"
       android:layout_marginLeft="40dp"
       android:layout_marginRight="40dp"
       android:layout_marginTop="24dp"
       />

   <EditText
       android:id="@+id/signup_idphone"
       android:layout_width="329dp"
       android:layout_height="wrap_content"
       android:layout_below="@+id/signup_phone"
       android:layout_marginLeft="40dp"
       android:layout_marginRight="40dp"
       android:layout_marginTop="11dp"
       android:background="@drawable/edit_text_corner_radius"
       android:padding="13dp"
       android:elevation="4dp"
       />

   <Button
       android:id="@+id/signup_buttonregister"
       android:layout_width="275dp"
       android:layout_height="wrap_content"
       android:paddingTop="15dp"
       android:paddingBottom="15dp"
       android:layout_below="@+id/signup_idphone"
       android:text="Register"
       android:textSize="18dp"
       android:textColor="#3A8BE7"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="20dp"
       android:backgroundTint="#ffffff"
       app:cornerRadius="50dp"
       />

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:layout_centerHorizontal="true"
       android:orientation="horizontal"
       android:layout_marginBottom="20dp">

      <TextView
          android:id="@+id/signin_redirect"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/signup"
          android:textColor="#ffffff"
          android:textSize="12dp"/>

      <TextView
          android:id="@+id/signin_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text=" Sign In"
          android:textColor="@color/white"
          android:textSize="12sp"
          android:textStyle="bold"
          android:clickable="true"/>

   </LinearLayout>

   <ProgressBar
       android:id="@+id/progress_bar"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:layout_centerHorizontal="true"
       android:layout_marginBottom="70dp"
       android:indeterminateTint="@color/teal_200"
       android:visibility="invisible"/>


</RelativeLayout>