<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewsDetail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="News"
                app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
                android:background="@color/top_nav"
                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                />
        </com.google.android.material.appbar.AppBarLayout>

        <TextView
            android:id="@+id/title_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto_medium"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_below="@id/top_bar"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/author_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Author"
            android:fontFamily="@font/roboto_regular"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:layout_below="@id/title_news"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/publish_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="publish at"
            android:fontFamily="@font/roboto_italic"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:layout_below="@id/author_news"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:gravity="center_horizontal" />

        <ImageView
            android:id="@+id/img_news"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="20dp"
            android:src="@color/blue"
            android:layout_below="@+id/publish_news"/>

        <TextView
            android:id="@+id/content_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Content"
            android:fontFamily="@font/roboto_regular"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_below="@id/img_news"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp" />

        <Button
            android:id="@+id/see_more_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content_news"
            android:layout_marginTop="10dp"
            android:text="Lihat Selengkapnya ..."
            android:textColor="@color/blue"
            android:textAllCaps="false"
            app:cornerRadius="15dp"
            android:backgroundTint="@android:color/transparent"
            android:paddingHorizontal="20dp"
            android:layout_centerHorizontal="true"
            style="?attr/materialButtonOutlinedStyle"
            app:strokeColor="@color/blue"
            />
    </RelativeLayout>

</androidx.core.widget.NestedScrollView>